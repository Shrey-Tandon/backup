<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/con1"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#dbd7d7"
            android:gravity="right"
            android:text="123"
            android:textSize="70sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/con2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#3f3e4c"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nine"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="9"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="8"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/seven"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="7"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <Button
                android:id="@+id/six"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="6"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/five"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="5"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/four"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="4"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <Button
                android:id="@+id/three"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="3"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/two"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="2"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/one"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="1"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <Button
                android:id="@+id/deci"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="."
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="0"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/equals"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimary"
                android:text="="
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/con1"
        android:layout_toEndOf="@id/con2"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#3a3858"
            android:text="Del"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/divide"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#3a3858"
            android:text="/"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#3a3858"
            android:text="-"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#3a3858"
            android:text="+"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/multi"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#3a3858"
            android:text="*"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

    </LinearLayout>

</RelativeLayout>