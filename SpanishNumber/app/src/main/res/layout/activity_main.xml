<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="354dp"
        android:layout_height="85dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/designbtn"
        android:gravity="center"
        android:text="Learn Spanish numbers..!!"
        android:textAllCaps="false"
        android:textColor="#4b0303"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="338dp"
        android:layout_height="360dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        app:layout_constraintVertical_bias="0.443">


        <Button
            android:id="@+id/b1"
            android:layout_width="114dp"
            android:layout_height="86dp"
            android:background="@drawable/designbtn"
            android:text="1"
            android:textColor="#3e0c0c"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/b2"
            android:layout_width="114dp"
            android:layout_height="86dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="66dp"
            android:background="@drawable/designbtn"
            android:text="2"
            android:textColor="#3e0c0c"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/b3"
            android:layout_width="114dp"
            android:layout_height="86dp"
            android:layout_toRightOf="@id/b2"
            android:background="@drawable/designbtn"
            android:text="3"
            android:textColor="#3e0c0c"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/b4"
            android:layout_width="114dp"
            android:layout_height="86dp"
            android:layout_below="@+id/b1"
            android:background="@drawable/designbtn"
            android:text="4"
            android:textColor="#3e0c0c"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/b5"
            android:layout_width="114dp"
            android:layout_height="86dp"
            android:layout_below="@+id/b2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/designbtn"
            android:text="5"
            android:textColor="#3e0c0c"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/b6"
            android:layout_width="114dp"
            android:layout_height="86dp"
            android:layout_below="@+id/b3"
            android:layout_toRightOf="@id/b5"
            android:background="@drawable/designbtn"
            android:text="6"
            android:textColor="#3e0c0c"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/b7"
            android:layout_width="114dp"
            android:layout_height="86dp"
            android:layout_below="@+id/b4"
            android:background="@drawable/designbtn"
            android:text="7"
            android:textColor="#3e0c0c"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/b8"
            android:layout_width="114dp"
            android:layout_height="86dp"
            android:layout_below="@+id/b5"
            android:layout_centerHorizontal="true"
            android:background="@drawable/designbtn"
            android:text="8"
            android:textColor="#3e0c0c"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/b9"
            android:layout_width="114dp"
            android:layout_height="86dp"
            android:layout_below="@+id/b6"
            android:layout_toRightOf="@id/b8"
            android:background="@drawable/designbtn"
            android:text="9"
            android:textColor="#3e0c0c"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/b10"
            android:layout_width="334dp"
            android:layout_height="96dp"
            android:layout_below="@+id/b7"
            android:layout_centerHorizontal="true"
            android:background="@drawable/designbtn"
            android:text="10"
            android:textColor="#3e0c0c"
            android:textSize="30sp"
            android:textStyle="bold|italic" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>